{% extends 'base.html.twig' %}

{% block title %}E-Portfolio - Competences Overview{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Section Header avec dégradé */
    .portfolio-header {
        background: linear-gradient(-45deg, #23a6d5, #23d5ab);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        color: white;
        padding: 6rem 0 3rem 0;
        margin-top: -2rem;
        clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
    }

    @keyframes gradient {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    /* Cards pour les compétences */
    .competence-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: none;
    }

    .competence-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.2);
    }

    /* Section claire */
    .light-section {
        background-color: #f8f9fa;
        padding: 6rem 0;
        margin: 4rem 0;
    }

    /* Progress bars */
    .progress-custom {
        height: 8px;
        border-radius: 4px;
    }
</style>
{% endblock %}

{% block body %}
<!-- Header Section -->
<section class="portfolio-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 offset-lg-2 text-center">
                <h1 class="display-4 fw-bold mb-4">Competency Portfolio</h1>
                <p class="lead">Demonstrating my skills and achievements in Networks & Telecommunications</p>
            </div>
        </div>
    </div>
</section>

<!-- Main Content Section -->
<div class="row g-4">
    {% for code, competence in competences %}
        <div class="col-lg-4">
            <div class="competence-card p-4">
                <h3 class="h4 mb-3">{{ competence.title }}</h3>
                <p class="text-muted">{{ competence.description }}</p>
                <div class="progress progress-custom">
                    <div class="progress-bar" role="progressbar" 
                         style="width: {{ competence.level }}%" 
                         aria-valuenow="{{ competence.level }}" 
                         aria-valuemin="0" 
                         aria-valuemax="100">
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

<!-- Skills Evidence Section -->
<section class="light-section">
    <div class="container">
    {# Preuves des compétences ici #}
    </div>
</section>

<!-- Progress Overview -->
<section class="container my-5">
    {# Vue d'ensemble des progrès ici #}
</section>

<!-- Call-to-Action Section -->
<section style="background: #1a1a1a;" class="py-5">
    <div class="container">
        <div class="text-center">
            <h2 class="display-5 text-white mb-4" style="font-weight: 300;">INTERESTED IN MY WORK?</h2>
            <p class="lead text-white-50 mb-5">Let's discuss how my skills can contribute to your projects</p>
            <a href="#contact" class="btn btn-outline-light px-5 py-3 rounded-pill" 
               style="font-weight: 500; letter-spacing: 0.5px; transition: all 0.3s ease;">
               Get In Touch
            </a>
        </div>
    </div>
</section>
{% endblock %}