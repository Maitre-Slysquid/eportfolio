{% extends 'base.html.twig' %}

{% block title %}Mon CV - Network Security Architect{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .cv-header {
        background: linear-gradient(45deg, #4169E1 0%, #6A5ACD 100%);
        color: white;
        padding: 6rem 0 3rem 0;
        clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
        position: relative;
    }

    .section-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        padding: 2rem;
        margin-bottom: 2rem;
        transition: transform 0.3s ease;
    }

    .section-card:hover {
        transform: translateY(-5px);
    }

    .experience-item {
        border-left: 3px solid #4169E1;
        padding-left: 1.5rem;
        margin-bottom: 2rem;
        position: relative;
    }

    .experience-item::before {
        content: '';
        position: absolute;
        width: 12px;
        height: 12px;
        background: #4169E1;
        border-radius: 50%;
        left: -7.5px;
        top: 0;
    }

    .skill-tag {
        background: rgba(65, 105, 225, 0.1);
        color: #4169E1;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        margin: 0.25rem;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .skill-tag:hover {
        background: #4169E1;
        color: white;
        transform: scale(1.05);
    }

    .progress-bar-custom {
        height: 8px;
        border-radius: 4px;
    }

    .download-cv {
        background: white;
        border: 2px solid #4169E1;
        color: #4169E1;
        padding: 1rem 2rem;
        border-radius: 50px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .download-cv:hover {
        background: #4169E1;
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(65, 105, 225, 0.3);
    }
    .modal-content {
        border-radius: 0.5rem;
    }
    
    .btn-close-custom:hover {
        opacity: 0.8;
        cursor: pointer;
    }
    .mac-modal .modal-content {
        border-radius: 12px;
        overflow: hidden;
        border: none;
        box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    }

    .mac-modal .modal-header {
        background: rgb(48, 48, 48);
        padding: 0.7rem 1rem;
        border: none;
        display: flex;
        align-items: center;
        height: 45px;
    }

    .mac-window-buttons {
        display: flex;
        gap: 8px;
        align-items: center;
        position: absolute;
        left: 15px;
    }

    .mac-btn {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: none;
        padding: 0;
        cursor: pointer;
        transition: opacity 0.2s;
    }

    .mac-btn:hover {
        opacity: 0.7;
    }

    .mac-close { background-color: #FF5F57; }
    .mac-minimize { background-color: #FEBC2E; }
    .mac-expand { background-color: #28C841; }

    .mac-modal .modal-title {
        width: 100%;
        text-align: center;
        color: #fff;
        font-size: 0.95rem;
        margin: 0;
    }

    .mac-modal .modal-body {
        padding: 2rem;
    }

    .mac-form-control {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }

    .mac-form-control:focus {
        border-color: #4169E1;
        box-shadow: 0 0 0 3px rgba(65, 105, 225, 0.1);
    }

    .mac-form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .mac-submit-btn {
        background: linear-gradient(45deg, #4169E1, #6A5ACD);
        border: none;
        border-radius: 8px;
        color: white;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .mac-submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(65, 105, 225, 0.2);
    }

    .format-selector {
        display: flex;
        gap: 1rem;
        margin-top: 0.5rem;
    }

    .format-option {
        flex: 1;
        padding: 1rem;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .format-option:hover {
        border-color: #4169E1;
    }

    .format-option.selected {
        border-color: #4169E1;
        background: rgba(65, 105, 225, 0.1);
    }
</style>
{% endblock %}

{% block body %}
<div class="modal fade mac-modal" id="cvModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="mac-window-buttons">
                    <button type="button" class="mac-btn mac-close" data-bs-dismiss="modal"></button>
                    <button type="button" class="mac-btn mac-minimize"></button>
                    <button type="button" class="mac-btn mac-expand"></button>
                </div>
                <h5 class="modal-title">Télécharger le CV</h5>
            </div>
            <div class="modal-body">
                <form id="cvDownloadForm">
                    <div class="mb-4">
                        <label class="mac-form-label">Nom complet</label>
                        <input type="text" class="form-control mac-form-control" required>
                    </div>
                    <div class="mb-4">
                        <label class="mac-form-label">Email professionnel</label>
                        <input type="email" class="form-control mac-form-control" required>
                    </div>
                    <div class="mb-4">
                        <label class="mac-form-label">Entreprise</label>
                        <input type="text" class="form-control mac-form-control">
                    </div>
                    <div class="mb-4">
                        <label class="mac-form-label">Format du document</label>
                        <div class="format-selector">
                            <div class="format-option selected" data-format="pdf">
                                <i class="fas fa-file-pdf mb-2" style="font-size: 1.5rem; color: #4169E1;"></i>
                                <div>PDF</div>
                            </div>
                            <div class="format-option" data-format="docx">
                                <i class="fas fa-file-word mb-2" style="font-size: 1.5rem; color: #4169E1;"></i>
                                <div>DOCX</div>
                            </div>
                        </div>
                        <input type="hidden" name="format" value="pdf" id="selectedFormat">
                    </div>
                    <button type="submit" class="mac-submit-btn w-100">Télécharger</button>
                </form>
            </div>
        </div>
    </div>
</div>

