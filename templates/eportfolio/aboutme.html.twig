{% extends 'base.html.twig' %}

{% block title %}R&T Portfolio - About Me{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Stylisation du dégradé bleu-violet comme dans votre image */
    .gradient-custom {
        background: linear-gradient(45deg, #4169E1 0%, #6A5ACD 100%);
        color: white;
        padding: 6rem 0 3rem 0;
        margin-top: -2rem;
        clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
    }

    .profile-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: none;
    }

    .profile-card:hover {
        transform: translateY(-5px);
    }

    .tech-badge {
        background: rgba(65, 105, 225, 0.1);
        color: #4169E1;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        margin: 0.25rem;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .tech-badge:hover {
        background: #4169E1;
        color: white;
        transform: scale(1.05);
    }

    .project-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        margin-bottom: 1.5rem;
        height: 100%;
    }

    .light-section {
        background-color: #f8f9fa;
        padding: 4rem 0;
        margin: 4rem 0;
    }

    .skill-progress {
        height: 10px;
        border-radius: 5px;
    }
</style>
{% endblock %}

{% block body %}
<!-- Section Header avec Dégradé -->
<section class="gradient-custom">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold mb-4">Étudiant Passionné R&T</h1>
                <p class="lead">Spécialisé en réseaux et télécommunications, je développe des solutions innovantes pour répondre aux défis technologiques de demain.</p>
            </div>
            <div class="col-md-6">
                <div class="profile-card p-4 text-dark">
                    <h3 class="mb-3">Compétences Techniques</h3>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Administration Réseau</span>
                            <span>85%</span>
                        </div>
                        <div class="progress skill-progress">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 85%" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Cybersécurité</span>
                            <span>75%</span>
                        </div>
                        <div class="progress skill-progress">
                            <div class="progress-bar bg-info" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Développement Web</span>
                            <span>70%</span>
                        </div>
                        <div class="progress skill-progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Section Projets R&T -->
<section class="container mt-5">
    <h2 class="text-center mb-4">Projets Académiques R&T</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="project-card card">
                <div class="card-body">
                    <h5 class="card-title">Configuration Réseau Avancée</h5>
                    <p class="card-text">Mise en place d'une infrastructure réseau complète avec VLANs, routage dynamique et sécurisation.</p>
                    <div class="mt-3">
                        <span class="tech-badge">CISCO</span>
                        <span class="tech-badge">VLAN</span>
                        <span class="tech-badge">OSPF</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="project-card card">
                <div class="card-body">
                    <h5 class="card-title">Sécurité Réseau</h5>
                    <p class="card-text">Implémentation de solutions de sécurité : pare-feu, IDS/IPS, VPN et surveillance réseau.</p>
                    <div class="mt-3">
                        <span class="tech-badge">Firewall</span>
                        <span class="tech-badge">VPN</span>
                        <span class="tech-badge">IDS</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="project-card card">
                <div class="card-body">
                    <h5 class="card-title">DevOps & Cloud</h5>
                    <p class="card-text">Déploiement d'applications en conteneurs et gestion d'infrastructure cloud.</p>
                    <div class="mt-3">
                        <span class="tech-badge">Docker</span>
                        <span class="tech-badge">AWS</span>
                        <span class="tech-badge">CI/CD</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Section Certifications -->
<section class="light-section">
    <div class="container">
        <h2 class="text-center mb-4">Certifications & Formations</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="profile-card p-4">
                    <h4>Certifications en cours</h4>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="fas fa-certificate text-primary me-2"></i>
                            CCNA - Cisco Certified Network Associate
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-shield-alt text-primary me-2"></i>
                            CompTIA Security+
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-cloud text-primary me-2"></i>
                            AWS Solutions Architect
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-card p-4">
                    <h4>Compétences Clés</h4>
                    <div class="mt-3">
                        <span class="tech-badge">TCP/IP</span>
                        <span class="tech-badge">VLANs</span>
                        <span class="tech-badge">Routage</span>
                        <span class="tech-badge">Sécurité</span>
                        <span class="tech-badge">Switching</span>
                        <span class="tech-badge">Python</span>
                        <span class="tech-badge">Linux</span>
                        <span class="tech-badge">Wireshark</span>
                        <span class="tech-badge">VMware</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Section Objectifs -->
<section class="container my-5">
    <h2 class="text-center mb-4">Objectifs Professionnels</h2>
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="profile-card p-4">
                <div class="d-flex align-items-center mb-4">
                    <i class="fas fa-rocket text-primary me-3 fa-2x"></i>
                    <div>
                        <h4 class="mb-0">Vision à Court Terme</h4>
                        <p class="text-muted mb-0">Spécialisation en cybersécurité et réseaux cloud</p>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <i class="fas fa-bullseye text-primary me-3 fa-2x"></i>
                    <div>
                        <h4 class="mb-0">Objectif à Long Terme</h4>
                        <p class="text-muted mb-0">Architecte réseau & sécurité pour projets internationaux</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://kit.fontawesome.com/your-kit-code.js"></script>
{% endblock %}