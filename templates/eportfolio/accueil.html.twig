{% extends 'base.html.twig' %}

{% block title %}Welcome - R&T Portfolio{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Animation de fond dynamique */
    .hero-background {
        background: linear-gradient(-45deg, #4169E1, #6A5ACD, #23a6d5, #23d5ab);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        position: relative;
    }

    @keyframes gradient {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    /* Effet verre glacé */
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .glass-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
    }

    /* Section d'introduction */
    .hero-section {
        min-height: 100vh;
        padding: 8rem 0 4rem;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .hero-text {
        font-size: 3.5rem;
        font-weight: 800;
        background: linear-gradient(to right, #fff, #e2e2e2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: fadeInUp 1s ease;
    }

    /* Section Skills avec design moderne */
    .skill-section {
        position: relative;
        padding: 6rem 0;
        background: #fff;
    }

    .skill-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
        background: linear-gradient(135deg, #fff, #f8f9fa);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    .skill-icon {
        font-size: 2.5rem;
        color: #4169E1;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

    .skill-card:hover .skill-icon {
        transform: scale(1.1);
    }

    /* Boutons stylisés */
    .custom-btn {
        padding: 1rem 2rem;
        border-radius: 50px;
        border: 2px solid #fff;
        color: #fff;
        background: transparent;
        transition: all 0.3s ease;
        text-decoration: none;
        position: relative;
        overflow: hidden;
    }

    .custom-btn:hover {
        background: #fff;
        color: #4169E1;
        transform: translateY(-3px);
    }

    .custom-btn::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
        top: 0;
        left: -100%;
        transition: all 0.3s ease;
    }

    .custom-btn:hover::before {
        left: 100%;
    }

    /* Animations */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }



    @keyframes float {
        0% { transform: translate(0, 0) rotate(0deg); }
        100% { transform: translate(100px, -100px) rotate(360deg); }
    }
</style>
{% endblock %}

{% block body %}
<!-- Hero Section -->
<header class="hero-background hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7" data-aos="fade-right">
                <h1 class="hero-text mb-4">{{ infos.prenom }} {{ infos.nom }}</h1>
                <h2 class="text-white h3 mb-4" style="font-weight: 300;">Networks & Telecommunications Student</h2>
                <p class="lead text-white mb-5">{{ infos.presentation }}</p>
                <div class="d-flex gap-3">
                    <a href="{{ path('app_eportfolio_cv') }}" class="custom-btn">View My CV</a>
                    <a href="{{ path('app_eportfolio_aboutme') }}" class="custom-btn">Discover More</a>
                </div>
            </div>
            <div class="col-lg-5" data-aos="fade-left">
